        <Grid Name="gridGrafica" Grid.Column="1">
            <chartingToolkit:Chart Name="graficoLineas" Visibility="Hidden">
                <chartingToolkit:LineSeries Name="_graficoLineas" Title="Importe" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}">
                    <chartingToolkit:LineSeries.DataPointStyle>
                        <Style TargetType="{x:Type chartingToolkit:LineDataPoint}">
                            <Setter Property="Control.Background" Value="#FF1E90FF" />
                            <Setter Property="Control.BorderBrush" Value="#FF000000" />
                            <Setter Property="Control.BorderThickness" Value="2" />
                            <Setter Property="Control.IsTabStop" Value="False" />
                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type chartingToolkit:LineDataPoint}">
                                        <Grid Name="Root" Opacity="1">
                                            <ToolTipService.ToolTip>
                                                <StackPanel Margin="2,2,2,2">
                                                    <ContentControl Content="{TemplateBinding chartingToolkit:DataPoint.IndependentValue}" ContentStringFormat="Fecha: {0:dddd, d MMMM, yyyy}" />
                                                    <ContentControl Content="{TemplateBinding chartingToolkit:DataPoint.DependentValue}" ContentStringFormat="Suma: {0}€" />
                                                </StackPanel>
                                            </ToolTipService.ToolTip>
                                            <Ellipse StrokeThickness="{TemplateBinding Control.BorderThickness}" Stroke="{TemplateBinding Control.BorderBrush}" Fill="{TemplateBinding Control.Background}" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </chartingToolkit:LineSeries.DataPointStyle>
                </chartingToolkit:LineSeries>
            </chartingToolkit:Chart>
            <chartingToolkit:Chart Name="graficoBarras" Visibility="Hidden">
                <chartingToolkit:ColumnSeries Name="_graficoBarras" Title="Importe" IsSelectionEnabled="False" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}" />
            </chartingToolkit:Chart>
        </Grid>
